{
	debug
	log {
		format json
		output stdout
		include http.request.header.x-real-ip http.request.remote_host http.response.status http.request.uri http.request.method
	}
}

:{$PORT} {
	# TLS fine-tuning inside the site block
	tls {
		protocols tls1.2 tls1.3
		ciphersuites TLS_AES_128_GCM_SHA256 TLS_AES_256_GCM_SHA384 TLS_CHACHA20_POLY1305_SHA256
	}

	handle /health* {
		respond 'OK' 200
	}

	route {
		realip {
			header X-Forwarded-For
			header X-Real-IP
			from 100.64.0.0/10
		}

		@not_ws {
			not header Connection *upgrade*
			not header Upgrade websocket
		}

		coraza_waf @not_ws {
			load_owasp_crs
			directives `
				Include @coraza.conf-recommended
				Include @crs-setup.conf.example
				Include @owasp_crs/*.conf

				SecAction "id:900000,phase:1,setvar:'tx.paranoia_level=2'"
				SecRuleEngine On
				SecAuditEngine RelevantOnly
				SecAuditLogParts ABIFHZ
				SecAuditLog /dev/stdout
				SecAuditLogFormat json
			`
		}

		header {
			Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
			Content-Security-Policy  upgrade-insecure-requests
			Referrer-Policy          no-referrer
			Permissions-Policy       interest-cohort=()
			X-Content-Type-Options   nosniff
			X-Frame-Options          SAMEORIGIN
			-Server
		}

		# optional rate-limit
		@ratelimit {
			path *
		}
		rate_limit @ratelimit {
			rate 100r/m
			burst 20
		}

		reverse_proxy @not_ws {env.BACKEND} {
			header_up X-Forwarded-Proto  https
			header_up X-Forwarded-Scheme https
			transport http {
				read_buffer 4096
				write_buffer 4096
				idle_timeout 30s
			}
		}
	}
}
